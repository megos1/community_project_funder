<h1>Listing project_items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Projects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_items.each do |project_item| %>
      <tr>
        <td><%= project_item.name %></td>
        <td><%= project_item.description %></td>
        <td><%= project_item.quantity %></td>
        <td><%= project_item.projects %></td>
        <td><%= link_to 'Show', project_item %></td>
        <td><%= link_to 'Edit', edit_project_item_path(project_item) %></td>
        <td><%= link_to 'Destroy', project_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

