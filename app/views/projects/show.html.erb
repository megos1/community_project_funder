<p id="notice"><%= notice %></p>

<%= image_tag @project.image.url(:medium) %>
<p>
  <strong></strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @project.duration %>
</p>

<p>
  <strong>User:</strong>
  <%= @project.user %>
</p>
<h1>Project Items</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.project_items.each do |project_item| %>
      <tr>
        <td><%= project_item.name %></td>
        <td><%= project_item.description %></td>
        <td><%= project_item.quantity %></td>
        <td><%= project_item.project %></td>
        <td><%= link_to 'Show', project_item %></td>
        <td><%= link_to 'Edit', edit_project_item_path(project_item) %></td>
        <td><%= link_to 'Destroy', project_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
